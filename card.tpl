<div class="card id_{{id}}">
  <img src="{{image}}" alt="{{description}}"/>
  <div class="description">{{description}}</div>
  <div class="status">
    <div class="userNameHost"><i class="fa fa-circle" aria-hidden="true"></i><span class="username">{{username}}</span></div>
    <div class="scoreStatus"><i class=""></i><span class="score1">{{score1}}</span><span>{{score2}}</span></div>
  </div>
  <div class="cardFooter">
    <i class="fa fa-heart" aria-hidden="true"></i>
    <div class="price_host">от <span class="price">{{price}}</span></div>
  </div>
</div>
